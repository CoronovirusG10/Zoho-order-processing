# Microsoft App credentials (Bot Framework)
MICROSOFT_APP_ID=
MICROSOFT_APP_PASSWORD=
MICROSOFT_APP_TYPE=MultiTenant
MICROSOFT_APP_TENANT_ID=

# Cross-tenant authentication
# Comma-separated list of allowed tenant IDs (leave empty and set ALLOW_ANY_TENANT=true for multi-tenant)
ALLOWED_TENANT_IDS=
# Set to 'true' to allow any tenant (multi-tenant mode)
ALLOW_ANY_TENANT=true

# Azure Storage
AZURE_STORAGE_ACCOUNT_NAME=
AZURE_STORAGE_CONTAINER_INCOMING=orders-incoming

# Azure Cosmos DB (for conversation storage)
COSMOS_ENDPOINT=
USE_COSMOS_DB=false

# Service endpoints
PARSER_ENDPOINT=http://localhost:3001
WORKFLOW_ENDPOINT=http://localhost:3002

# Server
PORT=3000
NODE_ENV=development

# Logging
LOG_LEVEL=info

# Language settings
DEFAULT_LANGUAGE=en
