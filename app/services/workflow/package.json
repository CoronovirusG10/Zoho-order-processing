{
  "name": "@order-processing/workflow",
  "version": "0.1.0",
  "private": true,
  "description": "Temporal workflow orchestrator for order processing",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:strict": "tsc --noEmit",
    "watch": "tsc -w",
    "clean": "rm -rf dist *.tsbuildinfo",
    "start": "node dist/worker.js",
    "start:worker": "node dist/worker.js",
    "start:server": "node dist/server.js",
    "dev": "ts-node src/worker.ts",
    "dev:server": "ts-node src/server.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@azure/cosmos": "^4.2.0",
    "@azure/identity": "^4.6.0",
    "@azure/storage-blob": "^12.26.0",
    "@temporalio/client": "^1.11.0",
    "@temporalio/worker": "^1.11.0",
    "@temporalio/workflow": "^1.11.0",
    "@temporalio/activity": "^1.11.0",
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "helmet": "^8.0.0",
    "@order-processing/types": "*",
    "@order-processing/shared": "*",
    "@order-processing/parser": "*",
    "@order-processing/committee": "*",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^20.17.10",
    "@types/uuid": "^10.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
