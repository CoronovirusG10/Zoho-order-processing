{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@order-processing/types": ["packages/types/src"],
      "@order-processing/shared": ["packages/shared/src"]
    }
  },
  "references": [
    { "path": "packages/types" },
    { "path": "packages/shared" },
    { "path": "services/teams-bot" },
    { "path": "services/teams-tab" },
    { "path": "services/api" },
    { "path": "services/parser" },
    { "path": "services/committee" },
    { "path": "services/zoho" },
    { "path": "services/workflow" },
    { "path": "services/storage" },
    { "path": "services/agent" }
  ],
  "exclude": ["node_modules", "**/dist", "**/build"]
}
